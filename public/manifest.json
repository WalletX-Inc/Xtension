{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "WalletX | Smart Wallet",
  "description": "Smart Wallet powered by WalletX",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "tabs", "bookmarks"],
  "background": {
    "service_worker": "js/background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["content-script.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["eth-provider.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    },
    {
      "resources": ["js/images/*"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "js/index.html",
    "default_title": "WalletX | Smart Wallet",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"]
    }
  ]
}
